<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C495C1"
    android:padding="25dp"
    android:id="@+id/lovePage"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feeling Lovely?"
            android:background="#3CFFFFFF"
            android:textStyle="bold"
            android:textSize="25sp"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Want to let it out? ..." />

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="#E2DECF"
            android:textColor="#121010"
            android:ems="10"
            android:gravity="top"
            android:hint="You are in love...."
            android:inputType="text"
            android:padding="10dp"
            android:visibility="visible"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/said"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Said Everything"
            android:layout_margin="10dp"
            android:backgroundTint="#4D176C"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/boost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boost up"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#4D176C"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/black"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Love is the hearts true language."
            android:visibility="gone"
            android:background="@color/black"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watching Something"
            android:backgroundTint="#26968A"
            android:layout_margin="20dp"/>

    </LinearLayout>

</ScrollView>